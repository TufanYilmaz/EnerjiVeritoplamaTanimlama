@model List<SayacTanimlari>
@{
    ViewData["Title"] = "Sayaç Tanımları";
}

<div class="text-center">
    <div class="float-end">
        <a asp-controller="Sayac" asp-action="AddSayac" class="text-decoration-none">
            Ekle
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Sayaç Kodu</th>
                <th>Sayaç Tanımı</th>
                <th>Sayaç Açıklama</th>
                <th>Sayaç Yeri</th>
                <th>İşlemler</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SayacKodu</td>
                    <td>@item.SayacTanimi</td>
                    <td>@item.SayacAciklama</td>
                    <td>@item.SayacYeri</td>
                    <td>
                        <a asp-controller="Sayac" asp-action="AddSayac" asp-route-id="@item.Id">Güncelle</a>
                        <span> | </span>
                        <a class="btn btn-danger" asp-controller="Sayac" asp-action="DeleteSayac" asp-route-id="@item.Id" onclick="return confirm('Bu sayacı silmek istediğinizden emin misiniz?');">Sil</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
