@model List<SuperFilm.Enerji.Entites.OpcNodes>

@{
    ViewData["Title"] = "OpcNodes";
}

<div class="text-center">
    <div class="float-end">
        <a asp-controller="OpcNodes" asp-action="AddOpcNodes" class="btn btn-outline-primary">
            Ekle
        </a>
    </div>
    <table class="table pageTable" id="pageTable">
        <thead>
            <tr>
                <th>Kodu</th>
                <th>Açıklaması</th>
                <th>Node Id</th>
                <th>Node NameSpace</th>
                <th>Attribute Id</th>
                <th>İşlemler</th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Description</td>
                    <td>@item.NodeId</td>
                    <td>@item.NodeNameSpace</td>
                    <td>@item.AttributeId</td>
                    <td>
                        <a asp-controller="OpcNodes" asp-action="AddOpcNodes" asp-route-id="@item.Id" class="btn btn-outline-warning">Güncelle</a>
                    </td>
                    

                </tr>
            }
        </tbody>
    </table>
</div>
