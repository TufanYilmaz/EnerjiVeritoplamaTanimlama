@model IsYeriIsletmeViewModel;
@{
    ViewData["Title"] = "İş Yeri Ekle";
}
<div class="account-container">
    <div class="account-box">
        <div class="mb-3">
            <a asp-controller="Isletme" asp-action="Index" class="text-decoration-none">
                Geri
            </a>
        </div>
        @if(Model.Isletme.Id==0){
            <h1 class="display-4">İşletme Ekle</h1>
        }
        else{
            <h1 class="display-4">İşletme Güncelle</h1>
        }
        <form asp-action="AddIsletme" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Isletme.Id" class="form-control" />
            <div class="mb-3">
                <label asp-for="Isletme.Kod" class="form-label"></label>
                <input asp-for="Isletme.Kod" class="form-control" />
                <span asp-validation-for="Isletme.Kod" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Isletme.Ad" class="form-label"></label>
                <input asp-for="Isletme.Ad" class="form-control" />
                <span asp-validation-for="Isletme.Ad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Isletme.Aciklama" class="form-label"></label>
                <input asp-for="Isletme.Aciklama" type="text" class="form-control" />
                <span asp-validation-for="Isletme.Aciklama" class="text-danger"></span>
            </div>

            <label for="IsyeriId">İş Yeri</label>
            <select class="form-control" asp-for="Isletme.IsyeriId">
                <option value="">Seçiniz</option>
                @if (Model.IsYerleri != null && Model.IsYerleri.Any())
                {
                    foreach (var item in Model.IsYerleri)
                    {
                        <option value="@item.Id">@item.Aciklama</option>
                    }
                }
                else
                {
                    <option>Mevcut İşYeri Yok</option>
                }

            </select>
            @if (Model.Isletme.Id == 0)
            {
                <input type="submit" value="Ekle" class="btn btn-success w-100 p-2" />
            }
            else
            {
                <input type="submit" value="Güncelle" class="btn btn-success w-100 p-2" />
            }
           
        </form>
    </div>
</div>
